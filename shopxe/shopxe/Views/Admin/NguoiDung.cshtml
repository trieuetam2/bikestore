@model List<shopxe.Models.AspNetUser>
@{
    ViewData["Title"] = "NguoiDung";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 padding-10">
    <table class="table">
        <thead>
        <th>Họ Tên</th>
        <th>tên đăng nhập</th>
        <th>Email</th>
        <th>Chức năng</th>
        </thead>
        <tbody>
        @foreach (var item in ViewBag.Users)
        {
        <tr>
            <td>@item.FullName</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <td>
                <a asp-action="Edit" asp-route-id="#" class="text-primary f2"><i class="fas fa-edit"></i></a>
                <a asp-action="DeleteUser" asp-route-id="@item.Id" class="text-primary f2"><i class="fa-solid fa-trash-can"></i></a>
            </td>
        </tr>
        }
        </tbody>
    </table>
</div>

